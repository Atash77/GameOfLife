pipeline {
    agent any
    }
    tools {
        maven 'Maven 3.6.3'
        jdk 'Java 8'
    }
    stages {
	stage('Build') {
            steps {
                sh 'mvn clean package' 
            }
	}

	stage('Test') {
	     steps { 
		sh 'mvn verify'
	    }
	}
}
            post {
                success {
		    echo 'Success!'
		    junit '**/target/surefire-reports/*.xml' 
                }
		
            }
        
    }
