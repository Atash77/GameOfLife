<mapper namespace="com.huilian.hlej.hcf.dao.VendingStateDao" > 

		 <select id="getVendingStatisticsPage" resultType="VendingStartVo" >
		       SELECT t.*
		       FROM
		       hcf_vend_monitor t
		        <where>
		        1 = 1
	        	<if test="vendCode != null and vendCode != ''">
	               AND t.vend_code like CONCAT('%','${vendCode}','%' )
	            </if>
	        	<if test="status != null and status != ''">
	              AND t.status like CONCAT('%','${status}','%' )
	            </if>
	            </where>
	            ORDER BY  t.status desc , t.id asc
	   </select>

</mapper>   
