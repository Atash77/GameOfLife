
pipeline {
    agent any
    tools {
        maven 'Maven 3.6.3'
        jdk 'Java 8'
    }
    stages {
	stage('Build') {
            steps {
                sh 'mvn clean package' 
            }
	}
	stage('Publish') {
     		steps{
		echo 'Deploying...'
		 
		sh 'mvn -Drevision=`git -C /home/carmel/gameOfLife/game-of-life rev-parse HEAD` deploy'
}
}
}
            post {
                success {
                    junit '**/target/surefire-reports/*.xml' 
                }
            }
        
    }

