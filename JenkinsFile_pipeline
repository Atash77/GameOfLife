pipeline{
    agent { label 'jdk8'}
    triggers{
        pollSCM('* * * * *') 
    }
    stages
   {
        stage('source code'){
            steps
            {
                git branch: 'sprint2', url: 'https://github.com/gopidevopss/game-of-life.git'
            }
        }

        stage('build the package'){
            steps{
                sh 'mvn clean package'
            }
        }

        stage('archiving the artifatcs')
        {
        steps{
              archiveArtifacts artifacts: '**/*.war', followSymlinks: false
             }

        }

        stage('publishing the test results')
        {
         steps{   
                junit '**/surefire-reports/*.xml'
              }
        }
   }
}